# Shared
NODE_ENV=development

# API
PORT=4000
DATABASE_URL=postgresql://leakwatch:leakwatch@localhost:5433/leakwatch?schema=public
SHOPIFY_API_KEY=replace_me
SHOPIFY_API_SECRET=replace_me
SHOPIFY_SCOPES=read_products
# For Shopify Embedded testing (single-domain mode), set both to the same HTTPS URL.
# Recommended with ngrok paid reserved domain:
#   ngrok http --domain=<your-reserved-domain> 3000
SHOPIFY_APP_URL=http://localhost:3000
API_BASE_URL=http://localhost:4000
REDIS_URL=redis://localhost:6379
# IMPORTANT: do not use angle brackets (< >) in values when sourcing via shell.
# Example: https://abcd1234efgh5678.r2.cloudflarestorage.com
R2_ENDPOINT=https://accountid.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=replace_me
R2_SECRET_ACCESS_KEY=replace_me
R2_BUCKET=leakwatch-dev
R2_REGION=auto
# Generate with: openssl rand -base64 32
LW_ENCRYPTION_KEY_32B=replace_with_base64_32byte_key
OPENAI_MODEL_EMAIL_DRAFT=gpt-4o-mini
MAILGUN_API_KEY=replace_me
MAILGUN_DOMAIN=mg.example.com
MAILGUN_WEBHOOK_SIGNING_KEY=replace_me

# Web
# Optional. If empty, web app uses current origin automatically.
# In single-domain tunnel mode, set this to SHOPIFY_APP_URL (or leave blank).
NEXT_PUBLIC_API_URL=
NEXT_PUBLIC_SHOPIFY_API_KEY=replace_me

# Worker
# Uses shared DATABASE_URL / REDIS_URL above.
OPENAI_API_KEY=replace_me
OPENAI_MODEL_NORMALIZE=gpt-4o-mini
OPENAI_MODEL_VISION=gpt-4o-mini
OPENAI_MAX_RETRIES=3
