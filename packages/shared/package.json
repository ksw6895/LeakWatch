{
  "name": "@leakwatch/shared",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./*": "./src/*"
  },
  "scripts": {
    "dev": "tsup src/index.ts --watch --dts",
    "build": "tsup src/index.ts --dts",
    "lint": "eslint src test --ext .ts",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run"
  },
  "dependencies": {
    "pino": "^9.6.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "tsup": "^8.3.5"
  }
}
